<div class="grid--full">

  <div class="grid-item large--two-thirds push--large--one-sixth">
    {% comment %}
      Page with a contact form
    {% endcomment %}

    {% comment %}
      Contact form starts here
    {% endcomment %}
    <div>
      {% form 'contact' %}

        {% comment %}
          Successful message
        {% endcomment %}
        {% if form.posted_successfully? %}
          <p class="note form-success">
            {{ 'contact.form.post_success' | t }}
          </p>
        {% endif %}

        <div class="grid" id="contactFormWrapper">
          <div class="grid-item one-half small--one-whole">
            <label for="contactFormName">{{ 'contact.form.name' | t }}</label>
            <input type="text" id="contactFormName" name="contact[name]" placeholder="{{ 'contact.form.name_placeholder' | t }}" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
          </div>
          <div class="grid-item one-half small--one-whole">
            <label for="contactFormEmail">{{ 'contact.form.email' | t }}</label>
            <input type="email"{% if form.errors contains "email" %} class="error"{% endif %} id="contactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email_placeholder' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
          </div>
          <div class="grid-item one-whole">
            <input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">
          </div>
        </div>

        <div class="contact-form__errors">
          {{ form.errors | default_errors }}
        </div>

      {% endform %}
    </div>

  </div>

</div>


